---
import type { CollectionEntry } from "astro:content";
import Card from "./Card.astro";
import Button from "./Button.astro";
import Pill from "./Pill.astro";
import { Image } from "astro:assets";

interface Props {
	post: CollectionEntry<"posts">;
	index?: number;
}

const { post, index = 0 } = Astro.props;
const { data } = post;
const isInitialLoad = index < 15;
---

<div transition:name={`post-${post.id}`}>
	<Card color="white">
		<div class="p-4 rounded-lg transition-colors dark:bg-black">
			<h3
				class="poppins text-lg md:text-xl dark:text-white"
				transition:name={`title-${post.id}`}
			>
				{data.title}
			</h3>
			<div
				class="rounded-lg border-3 border-black dark:border-white my-4 h-56 overflow-hidden"
			>
				<Image
					src={data.imgUrl}
					alt={data.title}
					width={800}
					height={400}
					loading={isInitialLoad ? "eager" : "lazy"}
					decoding={isInitialLoad ? "sync" : "async"}
					class="rounded h-full w-full object-cover"
					transition:name={`image-${post.id}`}
				/>
			</div>
			<p class="poppins text-gray-800 dark:text-gray-200">
				{data.description}
			</p>

			<div class="flex justify-end my-4">
				<div
					class="transition-colors hover:bg-gray-100 dark:hover:bg-gray-900 rounded-lg"
				>
					<Button href={`/${post.id}/`}>
						<span class="dark:text-white">Lire plus &rarr;</span>
					</Button>
				</div>
			</div>

			<div class="hidden sm:inline-block">
				<div class="flex justify-between items-center">
					<ul class="flex flex-wrap gap-4 mt-2">
						{
							data.tags.map((tag) => (
								<li>
									<a
										class="sanchez"
										href={`/tag/${tag.toLowerCase()}/`}
									>
										<Pill>{tag}</Pill>
									</a>
								</li>
							))
						}
					</ul>
					{
						data.draft && (
							<span class="bg-green rounded-full border-2 py-1 px-4 text-sm border-black dark:border-white card-shadow dark:text-white">
								Brouillon
							</span>
						)
					}
				</div>
			</div>
		</div>
	</Card>
</div>

<style>
	::view-transition-old(*),
	::view-transition-new(*) {
		animation-duration: 0.3s;
		animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
	}
</style>
